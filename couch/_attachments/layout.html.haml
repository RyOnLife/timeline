!!! 5
%html.no-js
  %head
    = csrf_meta_tag
    %meta{ charset: "utf-8" }
    %meta{ "http-equiv" => "X-UA-Compatible", content: "IE=edge,chrome=1" }
    
    %title Timeline
    
    = stylesheet_link_tag "yui-3-reset-fonts-base.min.css", "ui/jquery.ui.all", "style", cache: true
    
    = javascript_include_tag "jquery.min", "modernizr-1.6.min", "ui/jquery.ui.core", "ui/jquery.ui.datepicker", "facebook", "application", cache: true
    %script{ type: "text/javascript" }
      = yield :javascript
  
  %body
  
    - unless controller.controller_name == "events" and controller.action_name == "new"
      #sidebar
        = yield :sidebar
    
    - if controller.controller_name == "events" and controller.action_name == "new"
      #main.no_sidebar
        %header#header
          %h1= yield :header
        = yield
        
    - else
      #main      
        %header#header.clearfix
          -if notice
            %p#notice=notice
          =yield :header
        
        = yield

    #fb-root
    %script{type: "text/javascript"}
      window.fbAsyncInit = function() {
      FB.init({appId: '121822724510409', status: true, cookie: true, xfbml: true});
      FB.Canvas.setAutoResize();
      FB.XFBML.parse(document.body, function() { XfbmlParsed(); });
      };
      (function() {
      var e = document.createElement('script');
      e.async = true;
      e.src = document.location.protocol+'//connect.facebook.net/en_US/all.js';
      document.getElementById('fb-root').appendChild(e);
      }());
      